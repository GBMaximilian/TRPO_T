
@{
    ViewBag.Title = "Order"; ;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Buy</title>
</head>
<body>
    <div> 
        <h3>Оформление заказа</h3>
