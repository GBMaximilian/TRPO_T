                <tbody>
                    <tr>
                        <td>ФИО</td>
                        <td><input type="text" name="FIO" /></td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td><input type="text" name="Email" /></td>
                    </tr>
                    <tr>
                        <td>Адрес</td>
                        <td><input type="text" name="Address" /></td>
                    </tr>
                    <tr>
                        <td>Количество</td>
                        <td><input type="number" name="Amount" /></td>
                        <br>
                    </tr>        
                    <tr>
                        <br>
                        <br>
                        <td colspan="2"><input type="submit" value="Оформить заказ"></td>
                    </tr>

                </tbody>


            </table>



        </form>
    </div>
</body>
</html>
